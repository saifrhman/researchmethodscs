      \strng{namehash}{ec3cd962aebbfdb31b0b92706f351876}
      \strng{fullhash}{300d72f9c29f02c701fdf2b136ab3804}
      \strng{bibnamehash}{ec3cd962aebbfdb31b0b92706f351876}
      \strng{authorbibnamehash}{ec3cd962aebbfdb31b0b92706f351876}
