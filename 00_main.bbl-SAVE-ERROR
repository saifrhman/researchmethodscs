      \strng{namehash}{aee56b10d9cf502dfd6a949510239bb8}
      \strng{fullhash}{209b3e992292aa449168da105266a6e9}
      \strng{bibnamehash}{aee56b10d9cf502dfd6a949510239bb8}
      \strng{authorbibnamehash}{aee56b10d9cf502dfd6a949510239bb8}
