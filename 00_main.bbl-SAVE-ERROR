      \field{journaltitle}{Acta Oceanologica Sinica}
      \field{langid}{english}
      \field{month}{9}
      \field{number}{9}
      \field{shortjournal}{Acta Oceanol. Sin.}
      \field{shorttitle}{Mangrove monitoring and extraction based on multi-source remote sensing data}
      \field{title}{Mangrove monitoring and extraction based on multi-source remote sensing data: a deep learning method based on {SAR} and optical image fusion}
