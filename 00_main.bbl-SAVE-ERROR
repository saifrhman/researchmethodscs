      \strng{namehash}{12fd923b40b90c9fed2781759d3db3f4}
      \strng{fullhash}{e80ba33ec3f5f408594f81b34f95c195}
      \strng{bibnamehash}{12fd923b40b90c9fed2781759d3db3f4}
      \strng{authorbibnamehash}{12fd923b40b90c9fed2781759d3db3f4}
