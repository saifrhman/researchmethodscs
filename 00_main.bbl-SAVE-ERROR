      \strng{namehash}{3b5dac837945b81f8dcefd02096b9057}
      \strng{fullhash}{3b5dac837945b81f8dcefd02096b9057}
      \strng{bibnamehash}{3b5dac837945b81f8dcefd02096b9057}
      \strng{authorbibnamehash}{3b5dac837945b81f8dcefd02096b9057}
      \strng{authornamehash}{3b5dac837945b81f8dcefd02096b9057}
