      \strng{namehash}{2da88f365d4af2be801c19dbc596c15e}
      \strng{fullhash}{c519829adaed508e313d65e1e74bfa6f}
      \strng{bibnamehash}{2da88f365d4af2be801c19dbc596c15e}
