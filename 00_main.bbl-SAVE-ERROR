      \strng{namehash}{c0f366b02ed19ff94cfb017e34d1351d}
      \strng{fullhash}{db10498de7c8b44bd98683a3bf5bdc9a}
      \strng{bibnamehash}{c0f366b02ed19ff94cfb017e34d1351d}
      \strng{authorbibnamehash}{c0f366b02ed19ff94cfb017e34d1351d}
      \strng{authornamehash}{c0f366b02ed19ff94cfb017e34d1351d}
