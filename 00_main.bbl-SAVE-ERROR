      \strng{namehash}{86c7a73ea206e97cc0cf88b181070177}
      \strng{fullhash}{c4190cd9d90491ebe9553b8e5a68eae5}
      \strng{bibnamehash}{86c7a73ea206e97cc0cf88b181070177}
