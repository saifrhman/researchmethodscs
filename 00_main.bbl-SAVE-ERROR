    \entry{jamaluddin_spatialspectraltemporal_2024}{article}{}
      \name{author}{3}{}{%
        {{hash=58dcc3ee13d7aeb7f8d33e4f59776baa}{%
           family={Jamaluddin},
           familyi={J\bibinitperiod},
           given={Ilham},
           giveni={I\bibinitperiod}}}%
        {{hash=a471e8c1393d7c4306a7f6c11ec549a3}{%
           family={Chen},
           familyi={C\bibinitperiod},
           given={Ying-Nong},
           giveni={Y\bibinithyphendelim N\bibinitperiod}}}%
        {{hash=a9add957ad51287f125b81788c531ab4}{%
           family={Fan},
