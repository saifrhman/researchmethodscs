    \entry{maung_assessing_2025}{article}{}
      \name{author}{4}{}{%
        {{hash=6ab61b4f8ae40507635996dc448d8500}{%
           family={Maung},
           familyi={M\bibinitperiod},
           given={Win\bibnamedelima Sithu},
           giveni={W\bibinitperiod\bibinitdelim S\bibinitperiod}}}%
        {{hash=72eb7e797fc7a0550dd7ecd2f17453d3}{%
