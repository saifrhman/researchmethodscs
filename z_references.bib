	number = {1},
	journaltitle = {Discover Conservation},
	shortjournal = {Discov Conserv},
	author = {Maung, Win Sithu and Tsuyuki, Satoshi and Hiroshima, Takuya and Htay, San San},
	urldate = {2025-11-18},
	date = {2025-03-06},
