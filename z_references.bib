	journaltitle = {Computers and Electronics in Agriculture},
	shortjournal = {Computers and Electronics in Agriculture},
	author = {Fu, Shuai and Liu, Jie and Gao, Jinlong and Feng, Qisheng and Feng, Senyao and Miao, Chunli and Li, Yunhao and Wu, Caixia and Liang, Tiangang},
